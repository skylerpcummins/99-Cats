<h3>Make Cat</h3>

<form action="<%= cats_url %>" method="post">
  <label for="cat_name">Cat Name</label>
  <input type="text" name="cat[name]">
  <br>

  <input type="radio" name="cat[sex]" id="cat_sex_female" value="F">
  <label for="cat_sex_female">Female</label>
  <br>

  <input type="radio" name="cat[sex]" id="cat_sex_male" value="M">
  <label for="cat_sex_male">Male</label>
  <br>

  <label for="cat_color">Color</label>
  <select name="cat[color]" id="cat_color">
    <option value="Black">Black</option>
    <option value="White">White</option>
    <option value="Brown">Brown</option>
  </select>
  <br>

  <label for="cat_birth_date">Birthday</label>
  <input type="date" name="cat[birth_date]">
  <br>

  <label for="cat_description">Description</label>
  <input type="textarea" name="cat[description]">
  <br>

  <input type="submit" value="Make Cat">


</form>
